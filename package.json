{
  "name": "band-evaluation",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "build": "babel src/server/ -d build",
    "start": "concurrently \"yarn startServer\" \"yarn --cwd client start\"",
    "test": "concurrently \"yarn testServer\" \"yarn testClient\"",
    "serve": "set TOPIC=evaluation && yarn build && node build/server.js",
    "startServer": "set TOPIC=evaluation && nodemon --watch server --exec babel-node -- server/server.js",
    "testClient": "yarn --cwd client test",
    "testServer": "set TOPIC=test && mocha --exit --recursive --require @babel/register --require @babel/polyfill test"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "cookie-parser": "^1.4.3",
    "debug": "^4.1.1",
    "express": "^4.16.4",
    "http-errors": "^1.7.1",
    "morgan": "^1.9.1",
    "node-rdkafka": "^2.5.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "http-status": "^1.3.1",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.9",
    "sinon": "^7.2.3",
    "sinon-chai": "^3.3.0",
    "supertest": "^4.0.2"
  }
}
